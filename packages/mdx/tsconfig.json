{
  "extends": "expo-module-scripts/tsconfig.base",
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./build",
    "jsx": "preserve",
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "include": ["./src"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*"]
}
